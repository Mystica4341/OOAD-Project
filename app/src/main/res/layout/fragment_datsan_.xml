<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".View.DatSanFrag">

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_margin="10dp"
                android:background="@drawable/rounded_cornerkhung"
                android:orientation="vertical"
                android:scrollbars="vertical">

                <TextView
                    android:id="@+id/tvChonTG"
                    android:layout_width="261dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/kevien"
                    android:gravity="center"
                    android:text="Chọn thời gian"
                    android:textColor="@color/white"
                    android:textSize="28dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_margin="15dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/edtChonNgay"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/kevientext"
                        android:ems="1"
                        android:hint="Chọn ngày..."
                        android:inputType="date"
                        android:paddingLeft="10dp" />

                    <Spinner
                        android:id="@+id/spinnerGio"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/kevientext"
                        android:ems="1"
                        android:inputType="time"
                        android:paddingLeft="10dp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView123"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="27dp"
                    android:textSize="25dp"
                    android:text="Chọn địa điểm:" />

                <Spinner
                    android:id="@+id/spinnerCoSoSan"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:paddingLeft="10dp"
                    android:background="@color/white"
                    android:textSize="40dp"
                    android:layout_marginBottom="5dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1073dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:scrollbars="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="900dp"
                    android:orientation="vertical"
                    android:scrollbars="vertical">

                    <TextView
                        android:id="@+id/textView15"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="27dp"
                        android:text="Chọn sân:"
                        android:textSize="25dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="295dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/lnSan5"
                            android:layout_width="186dp"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            android:background="@drawable/khungdatsan"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/imgVsan5"
                                android:layout_width="match_parent"
                                android:layout_height="185dp"
                                android:layout_margin="15dp"
                                app:srcCompat="@drawable/san5" />

                            <CheckBox
                                android:id="@+id/checkBoxS5"
                                android:layout_width="138dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="Sân 5"
                                android:textSize="18dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/lnSan7"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            android:background="@drawable/khungdatsan"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/imgVsan7"
                                android:layout_width="match_parent"
                                android:layout_height="184dp"
                                android:layout_margin="15dp"
                                app:srcCompat="@drawable/san07" />

                            <CheckBox
                                android:id="@+id/checkBoxS7"
                                android:layout_width="136dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="Sân 7"
                                android:textSize="18dp" />
                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/textVLoaiCo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="27dp"
                        android:text="Chọn loại cỏ:"
                        android:textSize="25dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="295dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/lnTuNhien"
                            android:layout_width="186dp"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            android:background="@drawable/khungdatsan"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/imgVCoTN"
                                android:layout_width="140dp"
                                android:layout_height="178dp"
                                android:layout_gravity="center"
                                android:layout_margin="10dp"
                                android:layout_weight="1"
                                app:srcCompat="@drawable/tunhien" />

                            <CheckBox
                                android:id="@+id/cbTuNhien"
                                android:layout_width="138dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="Cỏ tự nhiên"
                                android:textSize="18dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/lnNhanTao"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            android:background="@drawable/khungdatsan"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/imgVCoNT"
                                android:layout_width="138dp"
                                android:layout_height="60dp"
                                android:layout_gravity="center"
                                android:layout_margin="10dp"
                                android:layout_weight="1"
                                app:srcCompat="@drawable/nhantao" />

                            <CheckBox
                                android:id="@+id/cbNhanTao"
                                android:layout_width="138dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="Cỏ nhân tạo"
                                android:textSize="18dp" />
                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/textViewCoc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="27dp"
                        android:text="Cọc trước"
                        android:textColor="@color/black"
                        android:textSize="25dp" />

                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/checkBoxCo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="27dp"
                            android:text="Có"
                            android:textSize="18dp" />

                        <RadioButton
                            android:id="@+id/checkBoxKhong"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="27dp"
                            android:text="Không"
                            android:textSize="18dp" />
                    </RadioGroup>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="233dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView89"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="27dp"
                            android:text="Thời gian thuê sân:"
                            android:textColor="@color/black"
                            android:textSize="25dp" />



                        <Spinner
                            android:id="@+id/spinnerThoiGianDa"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginBottom="5dp"
                            android:background="@color/white"
                            android:paddingLeft="40dp"
                            android:textSize="25dp" />
                        <TextView
                            android:id="@+id/textView22"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:paddingLeft="40dp"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:textColor="#FF0000"
                            android:text="Tổng tiền: " />


                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnThoat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:layout_weight="1"
                        android:backgroundTint="#1A90FE"
                        android:text="Thoát" />

                    <Button
                        android:id="@+id/btnXacNhan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:layout_weight="1"
                        android:backgroundTint="#1A90FE"
                        android:text="Đặt sân" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>
</ScrollView>