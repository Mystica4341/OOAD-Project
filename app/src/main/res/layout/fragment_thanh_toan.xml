<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".View.ThanhToanFrag">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/custom_listview2"
            android:gravity="center"
            android:text="Thanh Toán"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView45"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:textStyle="bold"
            android:gravity="center"
            android:text="Thông tin đặt sân"
            android:textSize="25dp" />

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="160dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/custom_listview"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgVSan_ThanhToan"
                android:layout_width="89dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                tools:srcCompat="@drawable/img_san" />

            <LinearLayout
                android:layout_width="194dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="227dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Sân: Lạch Chay" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="225dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Địa chỉ: Thành Phố Hải Phòng" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="227dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Số điện thoại: 0987654321" />

                <TextView
                    android:id="@+id/textView40"
                    android:layout_width="228dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Giờ: 5am-7am" />

                <TextView
                    android:id="@+id/textView43"
                    android:layout_width="228dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Lý do: Thay đổi giờ khác" />

                <TextView
                    android:id="@+id/textView44"
                    android:layout_width="228dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Số tiền cọc: 200.000đ" />


            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/textView9"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:textStyle="bold"
            android:gravity="center"
            android:text="Thông tin khách hàng"
            android:textSize="25dp" />

        <EditText
            android:id="@+id/edtHoVaTen_ThanhToan"
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp"
            android:background="@drawable/custom_listview"
            android:hint="Họ và tên"
            android:paddingLeft="10dp" />

        <EditText
            android:id="@+id/edtSDT_ThanhToan"
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp"
            android:background="@drawable/custom_listview"
            android:hint="Số điện thoại"
            android:inputType="phone"
            android:paddingLeft="10dp" />

        <EditText
            android:id="@+id/edtEmail_ThanhToan"
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp"
            android:background="@drawable/custom_listview"
            app:cornerRadius="50dp"
            android:hint="Email"
            android:paddingLeft="10dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:paddingLeft="60dp"
            android:textStyle="bold"
            android:text="Hình thức thanh toán"
            android:textColor="#3F51B5"
            android:textSize="18dp" />

        <CheckBox
            android:id="@+id/checkMoMO_ThanhToan"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="35dp"
            android:text="Momo" />

        <CheckBox
            android:id="@+id/checkZaloPay_ThanhToan"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="35dp"
            android:text="ZaloPay" />

        <CheckBox
            android:id="@+id/checkTheTinDung_ThanhToan"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="35dp"
            android:text="Thẻ tín dụng" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:paddingLeft="100dp"
            android:text="Số tiền cọc:" />

        <Button
            android:id="@+id/btnDatCoc_ThanhToan"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="#029FD1"
            android:text="Đặt cọc" />
    </LinearLayout>

</FrameLayout>