<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.DangNhapActivity">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewDangNhap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corner"
            android:layout_margin="20dp"
            android:gravity="center"
            android:text="Đăng Nhập"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="30dp" />

        <ImageView
            android:id="@+id/imgVLogo"
            android:layout_width="152dp"
            android:layout_height="152dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@drawable/user" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="174dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="vertical">


            <EditText
                android:id="@+id/editTextUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="20dp"
                android:background="#D8D8D8"
                android:ems="20"
                android:inputType="text"
                android:padding="5dp"
                android:paddingTop="10dp"
                android:hint="Tài khoản"
                android:textSize="30dp" />


            <EditText
                android:id="@+id/editTextMK"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="#D8D8D8"
                android:ems="20"
                android:padding="5dp"
                android:paddingTop="10dp"
                android:hint="Mật khẩu"
                android:inputType="textPassword"
                android:textSize="30dp" />
        </LinearLayout>

        <Button
            android:id="@+id/btnDangNhap"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="#479CCB"
            android:text="Đăng nhập" />

        <TextView
            android:id="@+id/tvDNBang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="Đăng nhập bằng:"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btnFacebook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:backgroundTint="#3B5997"
            android:textStyle="bold"
            android:text="Facebook"
            android:drawableLeft="@drawable/facebook"
            />

        <Button
            android:id="@+id/btnGoogle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="100dp"
            android:backgroundTint="#D8D8D8"
            android:text="Google"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            android:drawableLeft="@drawable/google"/>

        <TextView
            android:id="@+id/tvQuenMK"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="Quên mật khẩu"
            android:textColor="#479DCC"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvDangKyDN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Đăng ký"
            android:textColor="#479DCC"
            android:textSize="20dp"
            android:textStyle="bold" />


    </LinearLayout>
</FrameLayout>