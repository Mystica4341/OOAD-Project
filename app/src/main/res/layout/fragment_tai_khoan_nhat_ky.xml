<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".View.TaiKhoanNhatKyFrag">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvTenKhach"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:paddingLeft="10dp"
                    android:text="Khách Hàng"
                    android:textSize="24dp" />
                <TextView
                    android:id="@+id/tvEmail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingLeft="10dp"
                    android:textSize="20dp"
                    android:text="KhachA@gmail.com" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imgSetting"
                android:layout_width="108dp"
                android:layout_height="78dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/baseline_settings_24" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="#03A9F4"
            app:cornerRadius = "25dp"
            android:ems="10"
            android:text="Nhật ký đặt Sân"

            android:textColor="@color/white"
            android:textSize="28dp"
            android:textStyle="bold"/>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/TabLayout"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <com.google.android.material.tabs.TabItem
                android:id="@+id/TabDatSan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đặt Sân" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/TabDaGiai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đá Giải" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/TabGiaoHuu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đá Giao Hữu" />
        </com.google.android.material.tabs.TabLayout>

        <ListView
            android:id="@+id/lvNhatKy"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

</FrameLayout>