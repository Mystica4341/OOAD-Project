<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="160dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            android:background="@drawable/custom_listview"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/santientai" />

            <LinearLayout
                android:layout_width="194dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtTenSan_Quanlycososan"
                    android:layout_width="227dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="20dp"
                    android:text="Sân: Lạch Chay" />

                <TextView
                    android:id="@+id/txtDiacChi_Quanlycososan"
                    android:layout_width="225dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Địa chỉ: Thành Phố Hải Phòng" />


                <Button
                    android:id="@+id/btnChiSua_quanlycososan"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="75dp"
                    android:layout_weight="1"
                    android:backgroundTint="#029FD1"
                    android:text="Chỉnh sửa" />

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

</RelativeLayout>