<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/edittext_background.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#ffffff" /> <!-- Màu nền của EditText -->
            <corners android:radius="8dp" /> <!-- Độ cong của góc, thay đổi giá trị để thay đổi độ cong -->
        </shape>
    </item>
    <item android:right="1dp" android:left="1dp" android:top="1dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#BDBDBD" /> <!-- Màu nền của bóng -->
            <corners android:radius="8dp" /> <!-- Độ cong của góc, phải giống với độ cong của EditText -->
        </shape>
    </item>
</layer-list>
